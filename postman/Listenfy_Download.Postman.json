{
  "info": {
    "_postman_id": "b8a3c7e0-1f9a-4b8d-9f7a-1c2f0d7a9999",
    "name": "Listenfy Download API",
    "description": "Endpoints actuales del backend Listenfy (descarga de variantes y servir archivos).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "youtube_url",
      "value": "https://www.youtube.com/watch?v=XXXXXXXXXXX",
      "type": "string"
    },
    {
      "key": "media_id",
      "value": "PUT_MEDIA_ID_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "‚¨áÔ∏è Download Audio (MP3)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"mediaId\": \"{{media_id}}\",\n  \"url\": \"{{youtube_url}}\",\n  \"kind\": \"audio\",\n  \"format\": \"mp3\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/v1/media/download",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "media", "download"]
        }
      }
    },
